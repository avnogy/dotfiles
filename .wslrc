#!/bin/sh
if [ "$environment" != "wsl" ]; then
        echo "This script is only supported on WSL."
        exit 1
fi

# WSL X server
export DISPLAY=$(route.exe print | awk '/0.0.0.0/ {print $4; exit;}'):0.0

# WSL locations 
export DOWNLOADS="/mnt/c/Users/$(wslvar USERNAME)/Downloads"
export CODE="/mnt/d/code"
export CDRIVE="/mnt/c"
export DDRIVE="/mnt/d"
export WINUSER="/mnt/c/Users/$(wslvar USERNAME)/"

# WSL aliases
alias cmdo='cmd.exe /c' 
alias cmd="cmd.exe" 

alias xpl='explorer.exe .' 
alias everything="/mnt/c/Program\ Files/Everything/Everything.exe"
alias gitsh="'/mnt/c/Program Files/Git/bin/bash.exe' -i -l" 

alias todo="todo-txt" 
