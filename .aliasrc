#!/bin/sh


# Verbosity and settings.
alias \
    cp="cp -iv" \
    mv="mv -iv" \
    rm="rm -vI" \
    bc="bc -ql" \
    mkd="mkdir -pv" \
    ffmpeg="ffmpeg -hide_banner"

# Colorize commands when possible.
alias \
    ls="ls -hN --color=auto --group-directories-first" \
    grep="grep --color=auto" \
    diff="diff --color=auto" \
    ccat="highlight --out-format=ansi" \
    ip="ip -color=auto"

# Convenience
alias \ 
    cd..='cd ../' \
    ..='cd ../' \
    ...='cd ../../../' \
    up='sudo apt update; sudo apt upgrade; sudo apt-get autoremove -yy; sudo apt-get clean' \
    ll="ls -l --time-style=long-iso" \
    lsh="ls -A -I'*'" \
    todo="todo-txt" \
    g="git"


# Python aliases
alias \
    pyenv="source .venv/bin/activate" \
    httpserv="sudo python3 -m http.server" \
    updog="cmd /c \"python -m updog\"" \
    scv='cbonsai -liSt 0.01 -w 0.5'

# WSL commands.
alias \
    cdcode='cd /mnt/d/code' \
    cmdo='cmd.exe /c' \
    gitsh="'/mnt/c/Program Files/Git/bin/bash.exe' -i -l" \
    explorer='explorer.exe .' \
    shutdown="cmd /c 'wsl --shutdown'" \
    cmd="cmd.exe" \
    cdusr="cd /mnt/c/Users/avner/" \
    telebot='cdcode && cd commitions/telegram-repeater && ssh -i ~/telegram.pem ec2-user@ec2-34-204-91-110.compute-1.amazonaws.com' \

# Git related aliases.
alias \
    gs="git status" \
    gd="git diff" \
    gds="git diff --staged" \
    gco='git checkout "$(git branch | sed "s/* //" | sed "s/  //" | fzf)"' \
    gb='git branch'

