#!/bin/sh

# Verbosity and settings.
[ "$environment" != "darwin" ] && alias rm="rm -vI" || alias rm="rm -v"
alias cp="cp -iv" 
alias mv="mv -iv" 
alias bc="bc -ql" 
alias mkd="mkdir -pv" 

# Colorize commands when possible.
[ "$environment" != "darwin" ] && alias ls="ls --color=auto --group-directories-first" || alias ls="ls -G"
alias grep="grep --color=auto" 
alias diff="diff --color=auto" 
[ "$environment" != "darwin" ] && alias ip="ip -color=auto"

# Convenience
alias cd..='cd ..' 
alias ..='cd ../' 
alias ...='cd ../../../' 
alias up='sudo apt update; sudo apt upgrade; sudo apt-get autoremove -yy; sudo apt-get clean' 
alias ll="ls -ahlF" 
[ "$environment" != "darwin" ] && alias lll="ls -ahlF --time-style=long-iso" 
[ "$environment" != "darwin" ] && alias lsh="ls -A -I'*'" || alias lsh="ls -A |  grep '^\.'"
alias la='ls -A'
alias l='ls -CF'

# Python aliases
alias pyenv="source .venv/bin/activate" 
alias httpserv="sudo python3 -m http.server" 
alias updog="sudo python -m updog" 

# Git related aliases.
alias g="git"
alias gs="git status" 
alias gd="git diff" 
alias gds="git diff --staged" 
alias gco='git checkout "$(git branch | sed "s/* //" | sed "s/  //" | fzf)"' 
alias gb='git branch'
alias gps='git push'
alias gpl='git pull'
alias gc='git commit'
alias glast='git log -1 HEAD --stat'
alias gdv='git difftool -t vimdiff -y'

### ctrl+arrows
bindkey "\e[1;5C" forward-word
bindkey "\e[1;5D" backward-word
# urxvt
bindkey "\eOc" forward-word
bindkey "\eOd" backward-word

### ctrl+delete
bindkey "\e[3;5~" kill-word
# urxvt
bindkey "\e[3^" kill-word

### ctrl+backspace
bindkey '^H' backward-kill-word

### ctrl+shift+delete
bindkey "\e[3;6~" kill-line
bindkey "\e[3@" kill-line

# Sourcing personal aliases (ssh etc..)
[ -f ~/.myaliasesrc ] && source ~/.myaliasesrc 


